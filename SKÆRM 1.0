}


void readTemperature(float &temperature, int &boxIndex) {
  boxIndex = random(0, 16); 
  temperature = random(150, 360) / 10.0; 
}

void temperature_graph(int sensor_ID) {
  background();
  tft.fillRect(260, 210, 55, 25, RED);
  tft.drawRect(260, 210, 55, 25, WHITE);
  tft.setTextColor(WHITE);
  tft.setTextSize(2);
  tft.setCursor(260+5, 210+5);
  tft.print("Exit");

  //DETTE ER EN TESTER
  int startX = 10;
  int endX = 310;
  int startY = 10;
  int endY = 200;
  int numReadings = 50; 
  float readings[numReadings]; 
  tft.setCursor(startX+100, endY+12);
  tft.setTextColor(WHITE);
  tft.print("Sensor " + String(sensor_ID) );

  
  for (int i = 0; i < numReadings; i++) {
    readings[i] = 0;
  }

  // TEGB AKSERNE
  tft.drawLine(startX, startY, startX, endY, WHITE); // Y-axis // x1, y1, x2, y2, color
  tft.drawLine(startX, endY, endX, endY, WHITE); // X-axis // x1, y1, x2, y2, color
  

  //Tegn labels:
  tft.setRotation(0);
  tft.setTextSize(1);
  tft.setCursor(startX+100, startY-10);
  tft.setTextColor(WHITE);
  tft.print("Temp (C)");
  tft.setRotation(1);
  tft.setTextSize(1);
  tft.setCursor(startX+120, endY+4);
  tft.print("Time (s)");

  //Tids interval 
  int interval = 100; 
  int graphX = startX+20;
  float graphY;

  while (1) {
    float temp;
    int boxIndex;
    readTemperature(temp, boxIndex);
    boxIndex = boxIndex+1;
    TSPoint p = ts.getPoint();
    pinMode(YP, OUTPUT);     //.kbv these pins are shared with TFT
    pinMode(XM, OUTPUT);     //.kbv these pins are shared with TFT

    if (p.z > ts.pressureThreshhold) {
        Serial.print("X = "); Serial.print(p.x);
        Serial.print("\tY = "); Serial.print(p.y);
        Serial.print("\tPressure = "); Serial.println(p.z);
    }
    if (p.z > ts.pressureThreshhold && p.x > 145 && p.x < 264 && p.y > 143 && p.y < 230) {
        multiple_temperature_screen();
      }

    if (boxIndex != sensor_ID) {
      continue;
    }

    // Shift array til venstre
    for (int i = 0; i < numReadings - 1; i++) {
      readings[i] = readings[i + 1];
    }

    // Tilføj ny temperatur
    readings[numReadings - 1] = temp;

    // Fjern gamle linje
    tft.fillRect(graphX, startY, 2, endY - startY, BLACK);

    // Lav ny linje
    for (int i = 0; i < numReadings - 1; i++) {
      int prevX = map(i, 0, numReadings - 1, startX, endX);
      int nextX = map(i + 1, 0, numReadings - 1, startX, endX);
      int prevY = map(readings[i], 15, 35, endY, startY);
      int nextY = map(readings[i + 1], 15, 35, endY, startY);

      tft.drawLine(prevX, prevY, nextX, nextY, BLUE);
    }

    // Opdater graffens position
    graphX = (graphX + 2) % endX;
    delay(interval);
  }
}

void multiple_temperature_screen(){
  background();
  int startX = 10;
  int startY = 10;
  int boxWidth = 40;
  int boxHeight = 40;
  int gapX = 20;
  int gapY = 14; 
  tft.fillRect(260, 200, 55, 35, RED);
  tft.drawRect(260, 200, 55, 35, WHITE);
  tft.setTextColor(WHITE);
  tft.setTextSize(2);
  tft.setCursor(260+5, 200+10);
  tft.print("Exit");

  for (int row = 0; row < 4; row++) {
      for (int col = 0; col < 4; col++) {
          int x = startX + (col * (boxWidth + gapX));
          int y = startY + (row * (boxHeight + gapY));
          tft.drawRect(x, y, boxWidth, boxHeight, WHITE);
          tft.setCursor(x-2 , y + boxHeight + 2);
          tft.setTextColor(WHITE);
          tft.setTextSize(1);
          tft.print("Sensor " + String(row * 4 + col + 1)+".");
      }
  }

  while(1){
    int freezing = 19;
    int hot = 29;
    float temp;
    int boxIndex;
    readTemperature(temp, boxIndex);
    int x = startX + ((boxIndex % 4) * (boxWidth + gapX));
    int y = startY + ((boxIndex / 4) * (boxHeight + gapY));
    if (temp > hot) {
      tft.fillRect(x, y, boxWidth, boxHeight, RED);
      tft.drawRect(x, y, boxWidth, boxHeight, WHITE);
      tft.setCursor(x + 5, y + boxHeight / 2);
      tft.setTextColor(WHITE);
      tft.setTextSize(1);
      tft.print(String(round(temp * 10) / 10.0,1) + "C");
    } else if (temp < freezing) {
      tft.fillRect(x, y, boxWidth, boxHeight, BLUE);
      tft.drawRect(x, y, boxWidth, boxHeight, WHITE);
      tft.setCursor(x + 5, y + boxHeight / 2);
      tft.setTextColor(WHITE);
      tft.setTextSize(1);
      tft.print(String(round(temp * 10) / 10.0,1) + "C");
    } else {
      tft.fillRect(x, y, boxWidth, boxHeight, GREEN); 
      tft.drawRect(x, y, boxWidth, boxHeight, WHITE);
      tft.setCursor(x + 5, y + boxHeight / 2);
      tft.setTextColor(BLACK);
      tft.setTextSize(1);
      tft.print(String(round(temp * 10) / 10.0,1) + "C");
    }
    TSPoint p = ts.getPoint();
    pinMode(YP, OUTPUT);     //.kbv these pins are shared with TFT
    pinMode(XM, OUTPUT);     //.kbv these pins are shared with TFT

    if (p.z > ts.pressureThreshhold) {
        Serial.print("X = "); Serial.print(p.x);
        Serial.print("\tY = "); Serial.print(p.y);
        Serial.print("\tPressure = "); Serial.println(p.z);
    }
    if (p.z > ts.pressureThreshhold && p.x > 145 && p.x < 264 && p.y > 143 && p.y < 230) {
        menu_screen();
      }
    else if (p.z > ts.pressureThreshhold && p.x > 826 && p.x < 920) { //FØRSTE RÆKKE
      if (p.y > 752 && p.y < 874) {
        temperature_graph(1);
      }
      if (p.y > 553 && p.y < 689) {
        temperature_graph(5);
      }
      if (p.y > 401 && p.y < 514) {
        temperature_graph(9);
      }
      if (p.y > 208 && p.y < 331) {
        temperature_graph(13);
      }
    }
    else if (p.z > ts.pressureThreshhold && p.x > 675 && p.x < 766) {  /// ANDEN RÆKKE
      if (p.y > 752 && p.y < 874) {
        temperature_graph(2);
      }
      if (p.y > 553 && p.y < 689) {
        temperature_graph(6);
      }
      if (p.y > 401 && p.y < 514) {
        temperature_graph(10);
      }
      if (p.y > 208 && p.y < 331) {
        temperature_graph(14);
      }
    }
    else if (p.z > ts.pressureThreshhold && p.x > 512 && p.x < 607) { //TREDJE RÆKKE
      if (p.y > 752 && p.y < 874) {
        temperature_graph(3);
      }
      if (p.y > 553 && p.y < 689) {
        temperature_graph(7);
      }
      if (p.y > 401 && p.y < 514) {
        temperature_graph(11);
      }
      if (p.y > 208 && p.y < 331) {
        temperature_graph(15);
      }
    }
    else if (p.z > ts.pressureThreshhold && p.x > 353 && p.x < 454) { //FJERDE RÆKKE
      if (p.y > 752 && p.y < 874) {
        temperature_graph(4);
      }
      if (p.y > 553 && p.y < 689) {
        temperature_graph(8);
      }
      if (p.y > 401 && p.y < 514) {
        temperature_graph(12);
      }
      if (p.y > 208 && p.y < 331) {
        temperature_graph(16);
      }
    }
      if (p.z > ts.pressureThreshhold) {
        Serial.print("X = "); Serial.print(p.x);
        Serial.print("\tY = "); Serial.print(p.y);
        Serial.print("\tPressure = "); Serial.println(p.z);
    }
    delay(100);
  }
}






